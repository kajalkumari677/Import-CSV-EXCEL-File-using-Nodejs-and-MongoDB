<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    
</head>
<body  class="p-3 mb-2 bg-secondary text-white">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
                <a class="navbar-brand " href="#">Import csv to mongo</a>
              </nav>
    <div class="container">
        <div class=" nav justify-content-center" style="margin-top:100px;">
         <div class="card border-dark mb-3 " style="max-width: 20rem;">
                <div class="card-header  text-dark"><h5>Upload csv file</h5></div>
                <div class="card-body">
                        <form action="/" method="post" enctype="multipart/form-data">
                            <input type="file" name="csv"><br><br>
                         <div class="text-center"><button type="submit" class="btn btn-lg btn-primary">submit</button></div>   
                        </form>
                </div>
          </div>
    </div><br>
    <%if(data.length>0){%>
   

        <table class="table table-hover" border="1">
            <thead>
            <tr class="bg-primary"> 
                <th>Sr.No</th>
                <th style="padding-right: 1em">Mailsubject</th>
                <th style="padding-right: 1em">Mailbody</th>
                <th style="padding-right:2em;padding-left:2em;">Recepients</th>
                <th>Frequency</th>
                <th>Custom</th>
                <th>Startingdate</th>
            </tr>
          </thead>
          <tbody >
            <%for(var i=0;i < data.length;i++){%>
              <tr>
               
                                  <td ><%= i+1%></td>
                                  <td style="padding-right: 1em"><%= data[i].Mailsubject%></td>
                                  <td style="padding-left: 1em;"><%= data[i].Mailbody%></td>
                                  <td style="padding-right:1em;padding-left:1em;"><%= data[i].Recepients%></td>
                                  <td style="padding-left: 1em"><%= data[i].Frequency%></td>
                                  <td style="padding-left: 1em"><%= data[i].Custom%></td>
                                  <td style="padding-left: 1em"><%= data[i].Startingdate %></td>
              </tr>
              <%}%>
          </tbody>
          </table>
    <%}%>
<br>
</body>
</html>